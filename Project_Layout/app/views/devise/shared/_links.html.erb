<%- if controller_name != 'sessions' %>
  <%= link_to "Đăng nhập", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Đăng ký", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Quên mật khẩu?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>


<h3>Login with</h3>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
	<br>
	<% if OmniAuth::Utils.camelize(provider) == 'Facebook' %>
		<%= link_to "Facebook", omniauth_authorize_path(resource_name, provider), class: "btn btn-info"  %>
	<% end %>

	
	<% if OmniAuth::Utils.camelize(provider) == 'Twitter' %>
		<%= link_to "Twitter", omniauth_authorize_path(resource_name, provider), class: "btn  btn-info" %>
	<% end %>
	
	<% if OmniAuth::Utils.camelize(provider) == 'GoogleOauth2' %>
		<%= link_to "GoogleOauth2", omniauth_authorize_path(resource_name, provider), class: "btn  btn-danger" %>
	<% end %>
	<br>

  <% end -%>
<% end -%>
