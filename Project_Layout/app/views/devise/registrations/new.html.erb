<h2 class = "text-center">Đăng ký tài khoản </h2>
<div class = "row">
  <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
    <hr class="colorgraph">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

       <% if resource.errors.any? %>
        <div class="alert alert-danger" id='drop-alert'>
          <%= resource.errors.full_messages.first %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        </div>
      <% end %>
    

      <div class = "form-froup">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
      </div>

      <div class = "form-froup">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
      </div>

      <div class = "form-froup">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Nhập lại password" %>
      </div>
       <hr class="colorgraph">
      <div class="row">
        <div class = "col-md-6">
          <%= f.submit "Đăng ký", class: "btn btn-primary" %>
        </div>
        <div class="col-md-6">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
      <hr class="colorgraph">
    </div>
  </div>
