<div class="row">
<div class="col-md-10">

<%= form_for @product, :html => { :multipart => true } do |f| %>
  <% if product.errors.any? %>
  <div id="drop-alert" class="alert alert-danger">
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "errors") %> :</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      
      </ul>
    </div>
    </div>
  <% end %>

    <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :nameProduct, "Name:", class: "col-md-2 control-label" %>
          <div class="col-md-3">
            <%= f.text_field :nameProduct, class: "form-control", accept: 'image/*' %>
          </div>
        </div>
      </div>
    </div>
    <br>

     <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :price, "Price:", class: "col-md-2 control-label" %>
          <div class="col-md-2">
            <%= f.number_field :price, class: "form-control" ,  value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any%>
          </div>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="form-group">
      <%= f.label :content , "Content:", class: "col-md-2 control-label"  %>
        <div class="col-md-8">
          <%= f.text_area :content ,size: "10x10", class: "form-control" %>
        </div>
      </div>
    </div><br>

     <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :address, "Address:", class: "col-md-2 control-label" %>
          <div class="col-md-3">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <br>


    <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :image_link, "Image:", class: "col-md-2 control-label" %>
          <div class="col-md-4">
            <%= f.file_field :image_link, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <br>


  

  <div class="field">
    <%= f.hidden_field :user_id , :value => current_user.id  %>
  </div>


  <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :category_id, "Category:", class: "col-md-2 control-label" %>
          <div class="col-md-3">
            <%= f.collection_select :category_id, Category.order(:nameCategory), :id, :nameCategory, include_blank: true , class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <br>


    <div class="actions">
      <div class="col-md-offset-2">
        <%= f.submit "Submit" , class: "btn btn-default btn-primary"%>
      </div>
    </div>
    <br>


<% end %>

</div>
</div>