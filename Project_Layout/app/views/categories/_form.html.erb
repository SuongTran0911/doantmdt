<div class="row">
<div class="col-md-10">

  <%= form_for(category) do |f| %>
    <% if category.errors.any? %>
    <div id="drop-alert" class="alert alert-danger">
      <div id="error_explanation">
        <h2><%= pluralize(category.errors.count, "errors") %> :</h2>

        <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <% end %>
  
    <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :parent_id, "Parent category:", class: "col-md-2 control-label" %>
          <div class="col-md-1">
            <%= f.collection_select :parent_id, Category.order(:nameCategory), :id, :nameCategory, include_blank: true , class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <br>


    <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :nameCategory, "Name category:", class: "col-md-2 control-label" %>
          <div class="col-md-3">
            <%= f.text_field :nameCategory, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <br>

     <div class="row">
     <div class="form-group">
        <div class="field">
          <%= f.label :sort_order, "Order:", class: "col-md-2 control-label" %>
          <div class="col-md-1">
            <%= f.number_field :sort_order, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <br>


      <div class="actions">
        <div class="col-md-offset-2">
          <%= f.submit "Submit" , class: "btn btn-default btn-primary"%>
        </div>
      </div>
      
  <% end %>

</div>
</div>
